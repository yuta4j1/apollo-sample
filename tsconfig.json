{
    "compilerOptions": {
        "alwaysStrict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2020",
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "target": "es2020",
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "server/**/*.ts",
        "client/**/*.tsx",
    ],
}